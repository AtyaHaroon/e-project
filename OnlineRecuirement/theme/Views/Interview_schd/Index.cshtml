@model IEnumerable<theme.Models.Interview_schd>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<h2>Scheduled Interview</h2>

<div class="d-grid gap-2 d-md-flex justify-content-md-end mb-3">
    <a href="/interview_schd/create" class="btn btn-inverse-primary me-md-2" type="button"> ADD</a>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Time)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.applicant.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Interviewer.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vacancy.Description)
        </th>
        <th>Action</th>

    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Time)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.applicant.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Interviewer.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Vacancy.Description)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }, new { @class = "btn btn-inverse-warning" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }, new { @class = "btn btn-inverse-danger" })
        </td>
    </tr>
}

</table>
